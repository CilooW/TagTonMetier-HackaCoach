{% extends 'base.html.twig' %}

{% block title %}Vote validé - Tag ton métier{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col s10 offset-s1 center-align">
                <h1>Merci d'avoir participé !</h1>
                <p>Tes tags ont bien été enregistrés !<br>
                    {% if vote < 3 %}
                        Il te reste encore <span>{{ 3 - vote }}</span> métiers à renseigner avant de pouvoir participer au tirage au sort !
                    {% endif %}
                </p>
                <p class="satis_form">Ton avis sur le salon nous intéresse ! <br />
                    Qu'as-tu pensé du salon ?</p>
                {{ form_start(edit_form) }}
                <div>
                    {{ form_row(edit_form.satisfaction)}}
                </div>
                <div>
                    {{ form_row(edit_form.comment, {label:'Un commentaire ? Une remarque ?'}) }}
                </div>

                {#<input type="submit" value="Edit" />#}
                <button class="btn waves-effect waves-light" type="submit" name="action" value="Edit">Valider</button>
                {{ form_end(edit_form) }}
            </div>
        </div>
        <div class="row">
            <div class="col offset-s1 s10 buttons_panel">
                <a href="{{ path('job_select') }}" class="btn">
                    Tagger un autre métier
                </a>
                <a href="{{ path('index') }}" class="btn">
                    Retour à l'accueil
                </a>
                <a href="{{ path('fos_user_security_logout') }}" class="btn">
                    Se déconnecter
                </a>
            </div>
        </div>
    </div>


    {#<ul>
        <li>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>#}

{% endblock %}
