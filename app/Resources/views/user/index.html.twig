{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Gender</th>
                <th>Status</th>
                <th>Age</th>
                <th>Department</th>
                <th>Newsletter</th>
                <th>Satisfaction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.gender }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.department }}</td>
                <td>{% if user.newsletter %}Yes{% else %}No{% endif %}</td>
                <td>{{ user.satisfaction }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
