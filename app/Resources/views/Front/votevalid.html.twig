{% extends "::base.html.twig" %}

{% block title %}Merci d'avoir voté !{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col offset-s1 s10">
                <h4>Merci d'avoir voté !</h4>
                <p>Votre vote a bien été enregistré !</p>
                {% if vote < 3 %}
                    <p>Il vous reste encore <span>{{ 3 - vote }}</span> métier à renseigner avant de pouvoir participer au tirage au sort !</p>
                {% endif %}



                <button href="{{ path('legalmention') }}" type="button" class="btn">
                    <i class="fa fa-arrow-circle-o-right"></i> Retour à l'accueil
                </button>
                <button href="{{ path('fos_user_security_logout') }}" type="button" class="btn">
                    <i class="fa fa-arrow-circle-o-right"></i> Se déconnecter
                </button>


            </div>
        </div>
    </div>
{% endblock %}