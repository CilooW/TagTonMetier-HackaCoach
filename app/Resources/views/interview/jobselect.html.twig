{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <h1>Domaine / Métiers</h1>

    <h2>Choisissez votre domaine et votre métier :</h2>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <label class="required" for="job_choices" >Choisissez vos mots-clés:</label>
        <select id="job_choices">
            <option value="" disabled selected>Métier</option>
        </select>
    <input type="submit" value="Selectionner métier">

    {{ form_end(form) }}
</div>

{% endblock %}

{% block javascripts %}

    <!-- jQuery -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

    <!-- Main script -->
    <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jobchoose.js') }}"></script>

    <!-- Materialize -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>


{% endblock %}
